{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "moduleResolution": "node",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": "./services/",
    "paths": {
      "shared/*": [ "../shared/*" ]
    },
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6"
    ],
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
